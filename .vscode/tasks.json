{
   "tasks": [
      {
         "type": "cppbuild",
         "label": "C/C++: clang++ générer le fichier actif",
         "command": "/opt/homebrew/Cellar/llvm/19.1.3/bin/clang++",
         "args": [
            "-std=c++23",
            "-fdiagnostics-color=always",
            "-g",
            "${file}",
            "-o",
            "${fileDirname}/${fileBasenameNoExtension}"
         ],
         "options": {
            "cwd": "${fileDirname}"
         },
         "problemMatcher": [
            "$gcc"
         ],
         "group": {
            "kind": "build",
            "isDefault": true
         },
         "detail": "Tâche générée par le débogueur."
      }
   ],
   "version": "2.0.0"
}